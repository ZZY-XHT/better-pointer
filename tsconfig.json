{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "src/**/*",
        "index.d.ts"
    ]
}
