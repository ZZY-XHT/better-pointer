{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "node_modules": true,
        "yarn.lock":true,
        ".eslintrc.json": true,
        ".gitignore": true,
        //webpack configs
        ".webpack": true,
        "webpack.**": true,
        "index.d.ts": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll": true,
        "source.organizeImports": true
    },
    "typescript.preferences.quoteStyle": "single",
}